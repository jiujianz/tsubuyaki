.content
	.timeline-tweet-box
		.home-tweet-box
			= form_with(model: @tweet, local: true) do |f|
				= f.text_field :content, class: 'form__image', placeholder: '今どうしてる？'
				= f.submit 'ツイート', class: 'form__submit'
	.tweet
		.tweet-content
			.tweet-infomation
				%span.fullname
				= current_user.name
				%span.user-name{href:"https://twitter.com/"} @kintaro
				%small.time 30分前
			.tweet-content-text hello world  こんにちはツイッター
			.tweet-infomation-footer
				.icon-reply
					= fa_icon 'comment', class: 'icon'
				.icon-retweet
					= fa_icon 'retweet', class: 'icon'
				.icon-favarite
					= fa_icon 'heart', class: 'icon'
				.icon-dm
					= fa_icon 'envelope', class: 'icon'