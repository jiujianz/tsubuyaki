.tweet-content
  .tweet-infomation
    %span.fullname
      = tweet.user.name
    %span.link-name
      = tweet.user.linkname
    %small.time 
      = tweet.created_at.strftime("%Y/%m/%d %H:%M")
  .tweet-content-text{style:"background-image: url(#{tweet.image})"}
    = tweet.content
  .tweet-link
    = fa_icon 'angle-down'
    %ul.more_list
      %li
        = link_to "削除", "/tweets/#{tweet.id}", method: :delete
  .tweet-infomation-footer
    .icon-reply
      = fa_icon 'comment', class: 'icon'
    .icon-retweet
      = fa_icon 'retweet', class: 'icon'
    .icon-favarite
      = fa_icon 'heart', class: 'icon'
    .icon-dm
      = fa_icon 'envelope', class: 'icon'